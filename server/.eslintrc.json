{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "default-case": "error",
    "no-alert": "error",
    "eol-last": "error",
    "no-undef": "error",
    "comma-dangle": "error",
    "object-curly-spacing": ["error", "always"],
    "no-trailing-spaces": "error",
    "array-bracket-spacing": ["error", "never"],
    "no-multi-spaces": "error",
    "no-console": "off",
    "prefer-arrow-callback": ["error", { "allowNamedFunctions": true }]
  },
  "globals": {
    "describe": true,
    "it": true,
    "beforeEach": true,
    "afterEach": true,
    "before": true,
    "after": true
  }
}