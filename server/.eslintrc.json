{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "quotes": ["error","single"],
    "semi": ["error","never"],
    "default-case": "error",
    "no-alert": "error",
    "eol-last": "error",
    "no-undef": "error",
    "comma-dangle": "error",
    "object-curly-spacing": ["error", "always"],
    "no-trailing-spaces": "error",
    "array-bracket-spacing": ["error", "never"],
    "no-multi-spaces": "error",
    "no-console": "off"
  }
}